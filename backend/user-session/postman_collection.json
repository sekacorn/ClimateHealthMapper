{
  "info": {
    "name": "Climate Health Mapper - User Session API",
    "description": "API collection for User Session microservice with SSO and MFA",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"fullName\": \"John Doe\",\n  \"phoneNumber\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"usernameOrEmail\": \"johndoe\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('accessToken', jsonData.accessToken);",
                  "    pm.environment.set('refreshToken', jsonData.refreshToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "SSO",
      "item": [
        {
          "name": "Initiate Google SSO",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/login/sso/google",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "login", "sso", "google"]
            }
          }
        },
        {
          "name": "Initiate Azure SSO",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/login/sso/azure",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "login", "sso", "azure"]
            }
          }
        },
        {
          "name": "Initiate Okta SSO",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/login/sso/okta",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "login", "sso", "okta"]
            }
          }
        }
      ]
    },
    {
      "name": "MFA",
      "item": [
        {
          "name": "Enable MFA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/mfa/enable",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "mfa", "enable"]
            }
          }
        },
        {
          "name": "Verify MFA Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionToken\": \"mfa-session-token\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/session/auth/mfa/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "auth", "mfa", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "Session",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/session/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "me"]
            }
          }
        },
        {
          "name": "Validate Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{accessToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/session/validate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "validate"]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/session/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "health"]
            }
          }
        }
      ]
    }
  ]
}
